<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:face="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ht"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/particulars_click"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/particulars_tx"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    face:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/particulars_tx"
                    android:layout_toRightOf="@+id/particulars_tx"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/particulars_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="我的名字"
                        android:textColor="#FF0000" />

                    <TextView
                        android:id="@+id/particulars_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="2017-5-27 14:15"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
            <com.example.com.onetimer.myview.CustomerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.example.com.onetimer.myview.CustomerView>
        </RelativeLayout>

        <TextView
            android:id="@+id/particulars_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="天气美美的,适合交友" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="216dp">

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/particulars_video"
                android:layout_width="match_parent"
                android:layout_height="270dp" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="250dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like_img"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:src="@drawable/raw_1499933216" />

                    <TextView
                        android:id="@+id/like_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1563" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/seek_img"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:src="@drawable/raw_1499947358" />

                    <TextView
                        android:id="@+id/shoucang_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="655" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:src="@drawable/raw_1499995160" />

                    <TextView
                        android:id="@+id/share_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="503" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:src="@drawable/raw_1499933789" />

                    <TextView
                        android:id="@+id/comment_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1.1万"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/comment_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>