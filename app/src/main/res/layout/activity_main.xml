<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#03A9F4">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:roundAsCircle="true"
            android:id="@+id/touxiang"/>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="158dp"
            android:text="推荐"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="158dp" />

        <ImageView
            android:id="@+id/bianji"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/raw_1500034665"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/framlayout"></FrameLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/group">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tuijian"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/tuij_style"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/duanzi"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/duanzi_style"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/shipin"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/shipin_style"/>
    </RadioGroup>
</LinearLayout>